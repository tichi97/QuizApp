<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewUSIU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="United States International University"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/txtExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Exam"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtViewUSIU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your student ID: "
        android:layout_below="@+id/txtExam"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewUsername"
        android:layout_below="@+id/txtExam"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your student name: "
        android:layout_below="@+id/textViewUsername"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtUsername"
        android:layout_below="@+id/textViewUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_quiz"
        android:layout_centerInParent="true"/>



</RelativeLayout>